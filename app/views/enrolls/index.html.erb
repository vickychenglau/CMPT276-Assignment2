<p id="notice"><%= notice %></p>

<div id="listing">
<h1>All Enrollments</h1>

<hr>

<div id="table">
<table id="center" align="center">
  <thead>
    <tr>
      <th>Student ID</th>
      <th>Course</th>
      <th>Percentage</th>
      <th>Letter Grade</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @enrolls.each do |enroll| %>
      <tr>
        <td>
          <font id="size">
            <%= enroll.student_id %>
          </font>
        </td>
        <td>
          <font id="size">
            <%= enroll.course_id %>
          </font>
        </td>
        <td>
          <font id="size">
            <%= enroll.percentage %>%
          </font>
        </td>
        <td>
          <font id="size">
            <%= enroll.lettergrade %>
          </font>
        </td>
        <td>
          <font id="size">
            <%= link_to 'Show', enroll %>
            <%= link_to 'Edit', edit_enroll_path(enroll) %>
            <%= link_to 'Destroy', enroll, method: :delete, data: { confirm: 'Are you sure?' } %>
          </font>
        </td>
      </tr>
      <% end %>
      <tr>
        <td id="links" colspan="5">
          <br>
          <%= link_to 'New Enroll', new_enroll_path %>
        </td>
      </tr>
  </tbody>
</table>
</div>

<hr>

<%= link_to 'View All Courses', :controller =>"courses" %> |
<%= link_to 'View All Students', :controller =>"students" %>
</div>
