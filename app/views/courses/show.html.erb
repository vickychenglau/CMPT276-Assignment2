<div id="showCourse">
<p id="notice"><%= notice %></p>

<p id="name">
  <strong>Course:</strong>
  <%= @course.course_id %>
</p>

<p id="desc">
  <strong>Description:</strong>
  <br>
  <%= @course.description %>
</p>
<%= link_to 'Edit', edit_course_path(@course) %>

<br>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Course</th>
      <th>Percentage</th>
      <th>Lettergrade</th>
    </tr>
  </thead>
  <br>
  <tbody>
    <% @enrolls.each do |enroll| %>
      <tr>
        <td><%= enroll.student_id %></td>
        <td><%= enroll.course_id %></td>
        <td><%= enroll.percentage %></td>
        <td><%= enroll.lettergrade %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', courses_path %>

</div>
