<script>
  grades = <%= @eGrades.to_json %>;
  for(var i=0; i<(grades.length); i++) {
    grades[i] = parseFloat(grades[i]);
  }
</script>

<div id="listing">
<p id="notice"><%= notice %></p>
<p id="name">
  <h1><%= @course.course_id %></h1>

</p>

<div id="table">

<table>
  <tr>
    <td id="desc">
      <p><strong>Description:</strong></p>
      <p><%= @course.description %></p>
    </td>
  </tr>
  <tr>
    <td id="links">
      <p id="edit">
        <%= link_to 'Edit', edit_course_path(@course) %>
      </p>
    </td>
  </tr>
</table>

<table>
  <thead>
    <tr>
      <th>Student ID</th>
      <th>Course</th>
      <th>Percentage</th>
      <th>Letter Grade</th>
    </tr>
  </thead>
  <br>
  <tbody>
    <% @enrolls.each do |enroll| %>
      <tr>
        <td><%= enroll.student_id %></td>
        <td><%= enroll.course_id %></td>
        <td><%= enroll.percentage %>%</td>
        <td><%= enroll.lettergrade %></td>
      </tr>
    <% end %>
    <tr>
      <td id="links" colspan=4>
        <br>
        <input  type="button"
                onclick="location.href='/histogram';"
                value="Assign Grades" />
      </td>
    </tr>
  </tbody>
</table>
</div>

<%= link_to 'Back', courses_path %>

</div>
