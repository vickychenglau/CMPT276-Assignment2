<p id="notice"><%= notice %></p>

<div id="listing">
<h1>Listing Students</h1>

<br>

<table>
  <thead>
    <tr>
      <th>Student ID</th>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.student_id %></td>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td>
          <%= link_to 'Show', student %> <br>
          <%= link_to 'Edit', edit_student_path(student) %> <br>
          <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Student', new_student_path %>
</div>
